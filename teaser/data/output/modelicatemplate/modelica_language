##get false
<%def name="get_true_false(value)", filter="trim">
  <%
  if value is False:
    return "false"
  elif value is True:
    return "true"
  else:
    return value
  %>
</%def>

##convert deg to rad
<%def name="deg_to_rad(value)", filter="trim">
  <%
  from math import pi
  return_value = value * pi/180
  return return_value
  %>
</%def>